@model RejestrUprawnien.Models.Poziom_uprawnien

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj pozycję</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Poziomy uprawnień</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b class="control-label col-md-2">Nazwa uprawnienia</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nazwa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nazwa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b class="control-label col-md-2">Zasób</b>
            <div class="col-md-10">
                @Html.DropDownList("id_zasob", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_zasob, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do uprawnień", "IndexZasoby", "Widok")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

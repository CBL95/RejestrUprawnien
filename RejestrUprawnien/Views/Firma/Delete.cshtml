@model RejestrUprawnien.Models.Firma

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuwanie</h2>

<h3>Czy na pewno chcesz usunąć następujący rekord?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b class="control-label col-md-2">Nazwa firmy</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nazwa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do strony głównej", "Index","Widok")
        </div>
    }
</div>
